<html>

<header>
<center> <h1> Enesca Library </h1> </center>
</header>

<%- include('partials/nav') %>

<style>
.bodym {
  margin: 25px 50px 75px 100px;
}

.sidebar {
  height: 100%;
  width: 75px;
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #111;
  overflow-x: hidden; 
  padding-top: 20px;
}


table, th, td {
  border: 1px solid black;
}

th, td {
  padding: 10px;
}

</style>

<div class='bodym'>
<center>
<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Author</th>
	<th>Edit</th>
	<th>Delete</th>
  </tr>
<tbody>
  <%books.forEach(books => { %>
  <tr>
	<td><%= books._id %></td>
    <td><%= books.title %></td>
	<td><%= books.author %></td>
	
	<td><a href="<%= `edit/${books._id}`%>" >Edit</a></td>
	
	<td><a href="<%= `/delete/${books._id}`%>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a></td>
  </tr>
  <% }); %>
</table>
</center>

</div>

</html>